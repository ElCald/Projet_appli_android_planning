<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Projet_Agenda" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/secondaryDarkColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/secondaryColor</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>


    <style name="Button.Danger" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/danger</item>
    </style>

    <style name="Button.Valider" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/good</item>
    </style>

    <style name="Button.Warning" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/warning</item>
    </style>

</resources>